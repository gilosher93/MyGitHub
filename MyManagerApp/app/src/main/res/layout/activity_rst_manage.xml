<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb9b5b5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gil.mymanagerapp.Activities.RstManageActivity">
    <TextView
        android:id="@+id/txtRstManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="רשימת מסעדות"
        android:textSize="40sp" />
    <ListView
        android:id="@+id/lstRstList"
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/txtRstManage" />

</RelativeLayout>
