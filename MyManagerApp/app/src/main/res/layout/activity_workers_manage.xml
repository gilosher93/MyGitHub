<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb9b5b5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gil.mymanagerapp.Activities.WorkersManageActivity">

    <TextView
        android:id="@+id/txtWorkersList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="רשימת עובדים"
        android:textSize="40sp" />

    <ListView
        android:id="@+id/lstWorkeresList"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_below="@+id/txtWorkersList"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_column="0"
        android:layout_marginLeft="50dp"
        android:background="#ff959694"
        android:drawableTop="@drawable/shakehands"
        android:onClick="btnAddNewWorker"
        android:text="Add New Worker" />

</RelativeLayout>
